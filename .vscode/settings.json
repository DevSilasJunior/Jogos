
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compilar SFML - app.exe",
        "type": "process",
        "command": "C:/mingw64/bin/g++.exe",
        "args": [
          "jogo/game.cpp",
          "-o", "jogo/app.exe",
          "-IC:/SFML-3.0.0-windows-gcc-14.2.0-mingw-64-bit/SFML-3.0.0/include",
          "-LC:/SFML-3.0.0-windows-gcc-14.2.0-mingw-64-bit/SFML-3.0.0/lib",
          "-lsfml-graphics",
          "-lsfml-window",
          "-lsfml-system",
          "-mconsole"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }